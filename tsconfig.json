{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@media/*": [
        "./src/media/*"
      ],
      //Administrator Area
      "@components/admin/*": [
        "./src/components/admin/*",
        "./src/app/administrator/_components/*"
      ],
      "@styles/admin/*": [
        "./src/app/administrator/_styles/*"
      ],
      "@state/admin/*": [
        "./src/app/administrator/_state/*"
      ],
      //End-User Area
      "@components/client/*": [
        "./src/components/client/*"
      ],
      "@components/shared/*": [
        "./src/components/shared/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}